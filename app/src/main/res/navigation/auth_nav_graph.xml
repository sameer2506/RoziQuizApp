    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/sign_in_fragment">

    <fragment
        android:id="@+id/sign_in_fragment"
        android:name="com.quiz.app.ui.auth.fragments.SignInFragment"
        android:label="Sign In"
        tools:layout="@layout/fragment_sign_in" />

    <fragment
        android:id="@+id/sign_up_fragment"
        android:name="com.quiz.app.ui.auth.fragments.SignUpFragment"
        android:label="Sign Up"
        tools:layout="@layout/fragment_sign_up" />

    <fragment
        android:id="@+id/user_details_fragment"
        android:name="com.quiz.app.ui.auth.fragments.UserDetailsFragment"
        android:label="User Details"
        tools:layout="@layout/fragment_user_details" />

